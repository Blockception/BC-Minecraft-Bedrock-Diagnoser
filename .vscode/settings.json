{
  "editor.insertSpaces": true,
  "typescript.preferences.quoteStyle": "single",
  "editor.codeActionsOnSave": { "source.fixAll.eslint": true },
  "npm.packageManager": "npm",

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.insertSpaces": true
  },

  "[markdown]": {
    "editor.wordWrap": "off"
  }
}
